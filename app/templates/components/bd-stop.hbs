<div class="list-item">
  {{#if draggable}}
    <div class="handle">
      <i class="bd-icon bd-icon--pin"></i>
    </div>
  {{/if}}

  {{#link-to 'stop' stop class="unstyled"}}
    {{bd-toggle-favorite stop=stop class="stop-item__toggle-favorite"}}
    <h1 class="list-item__title">{{stop.name}} <small class="light">{{stop.direction}}</small></h1>
    <div class="list-item__details">
      {{#each stop.routes as |route|}}
        {{bd-route-tag route=route}}
      {{/each}}
    </div>
  {{/link-to}}
</div>
