<div class="event__time">{{moment departure.time 'h:mma'}}</div>
<div class="event__marker"></div>
<div class="event__event-details">
  <p>
    {{bd-route-tag route=departure.route}} 
    <span>{{departure.trip.headsign}}</span>
    {{#if departure.realtime}}
      <span class="tag tag--green">realtime</span>
    {{/if}}
  </p>
  <div class="event-details__metadata">
    <span class="metadata__time">
      <i class="bd-icon bd-icon--clock"></i>
      {{timeFromNow}}
    </span>
  </div>
</div>
