<div class="action-banner action-banner--fixed-top">
  {{bd-back-button}}
  {{bd-search action="search"}}
  {{ link-to "" "application" class="button button--home" }}
</div>

<div class="list">
  <section class="section">
    <h2 class="light"><i class="bd-icon bd-icon--search"></i> Routes</h2>
    {{#each model.routes as |route|}}
      {{bd-route route=route}}
    {{else}}
      <p class="text-center">No routes found</p>
    {{/each}}
  </section>
</div>
