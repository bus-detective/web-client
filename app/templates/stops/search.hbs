<form {{action "search" on="submit"}} class="push-sides">
  <div class="input-group">
    {{input value=nameField placeholder="Street Name" class="text-field"}}
    <div class="input-group__button">
      <button type="submit" class="button">Search</button>
    </div>
  </div>
</form>

{{#if didSearch}}
  {{#each stops as |stop|}}
    {{rt-stop stop=stop}}
  {{else}}
    <p class="text-center">No stops found</p>
  {{/each}}
{{/if}}
