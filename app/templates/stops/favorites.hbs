<div class="list">
  <section class="section">
    <h2 class="light">
      <i class="bd-icon bd-icon--heart"></i>
      Favorite Stops
    </h2>

    {{#sortable-group tagName="div" onChange="reorderFavorites" as |group|}}
      {{#each model.all as |stop|}}
        {{#sortable-item tagName="div" model=stop group=group handle=".handle"}}
          {{bd-stop stop=stop draggable=true}}
        {{/sortable-item}}
      {{/each}}
    {{/sortable-group}}
  </section>
</div>
