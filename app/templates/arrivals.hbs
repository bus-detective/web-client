<h1 class="page-title">
  {{#link-to 'stops'}}{{fa-icon 'chevron-left'}}{{/link-to}}
  <span>Buses for {{stopId}}</span>
</h1>

{{#if isLoading}}
  <p class="text-center">Loading stops...</p>
{{else if sortedArrivals}}
  <ol class="unstyled-list flush-top">
    {{#each sortedArrivals as |arrival|}}
      {{bd-arrival arrival=arrival}}
    {{/each}}
  </ol>
{{else}}
  <p class="soft-sides">There are no arrivals for stop {{stopId}}</p>
{{/if}}
